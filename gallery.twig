{% extends "layout.twig" %}

{% block content %}

<a name="top"></a>

<header class="bk-header">
    <div class="wrapper clearfix">
        <div class="responsivecolumns columns-two-75-25">
            <div class="column columns-two-left">
                {{widget('logo', 'grillhouse-logo', {"defaultlogo": asset('images/grillhouse-logo.png')})|raw}}
                {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
            </div>
                <!--end columns-two-left-->
            <div class="column columns-two-right">
                {{widget('clicktocall', 'telephone-us', {phoneText: '212 6574 6736'})|raw}}
            </div>
                <!--end columns-two-right-->            
        </div>
        <!--end responsive-columns-->
    </div>
    <!--end wrapper -->
    <nav class="clearfix">
        {% if pages|length > 1 %}
            {{widget('extendednavigation', 'navigationheader', {})|raw}}
        {% endif %}
    </nav>
</header>

<div class="main wrapper">
    {{widget('gallery', 'featuregallery', {})|raw}}
    {{zone('main')|raw}}
</div>

<footer class="bk-footer">
    <div class="wrapper clearfix">
        <div class="responsivecolumns columns-two-50-50">
            <div class="column columns-two-left">
            {{widget('map', 'addressmap', {'height': '250', 'zoom': '15', 'address': 'profile'})|raw}}
            </div> 
            <div class="column columns-two-right">
            {{widget('content', 'footercontent', {content: '', lines: 'all'})|raw}}
        </div>
    </div>
</footer>

<script src="{{asset('assets/isotape.js')}}"></script>
<script>

(function ()
{
	// Add the niceScroll plugin to the iframe html element
	$(document).ready(function ()
	{
        var featuregallery = $('#page-zones__template-widgets__gallery-featuregallery'),
            timeout = null,
            setuptimeout = null;

        function setUpGallery() {
            featuregallery.isotope({
                itemSelector: 'li',
                masonry: {}
            });
        }

        featuregallery.on('prerender', function() {
            featuregallery.isotope('destroy');
        });

        featuregallery.on('rendered', function(){
            clearTimeout(setuptimeout);
            setuptimeout = setTimeout(function() {
                setUpGallery();
            },1000);
        });

        window.addEventListener( 'resize', function() {
            //clearTimeout(timeout);
            //timeout = setTimeout(function() {
                featuregallery.isotope('reLayout');
            //},1000);
        }, false );

        setUpGallery();
    });
}());
</script>

{% endblock %}